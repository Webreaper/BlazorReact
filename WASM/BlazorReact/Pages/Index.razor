@page "/"
@inject IJSRuntime JsWindow;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div @ref="_react">this is where react should be</div>

@code
{
    private ElementReference _react;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await JsWindow.InvokeVoidAsync("renderReact", _react);
    }
}
